<?xml version="1.0"?>
<!DOCTYPE facelet-taglib PUBLIC
        "-//Sun Microsystems, Inc.//DTD Facelet Taglib 1.0//EN"
        "http://java.sun.com/dtd/facelet-taglib_1_0.dtd">
<facelet-taglib version="2.0"
                xmlns="http://java.sun.com/xml/ns/javaee"
                xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                                    http://java.sun.com/xml/ns/javaee/web-facelettaglibrary_2_0.xsd">

    <namespace>http://husnutapan.com/example</namespace>
    <tag>
        <tag-name>custom-input</tag-name>
        <component>
            <component-type>com.husnutapan.jsf.CustomInput</component-type>
        </component>
        
        <attribute>
            <description>image attribute.</description>
            <name>imageShow</name>
            <required>false</required>
            <type>java.lang.Boolean</type>
            <default-value>false</default-value>
        </attribute>
        
        <attribute>
            <description>video attribute.</description>
            <name>videoShow</name>
            <required>false</required>
            <type>java.lang.Boolean</type>
            <default-value>false</default-value>
        </attribute>
        
        <attribute>
            <description>lightBox attribute.</description>
            <name>lightBoxShow</name>
            <required>false</required>
            <type>java.lang.Boolean</type>
            <default-value>false</default-value>
        </attribute>
        
        <attribute>
            <name>value</name>
            <required>true</required>
            <type>java.lang.Object</type>
            <description>Collection of images.</description>
        </attribute>
        
        <attribute>
            <name>style</name>
            <required>false</required>
            <type>java.lang.String</type>
            <description>Inline style of the container element.</description>
        </attribute>
        
        <attribute>
            <name>styleClass</name>
            <required>false</required>
            <type>java.lang.String</type>
            <description>Style class of the container element.</description>
        </attribute>
          <attribute>
            <name>prefix</name>
            <required>true</required>
            <type>java.lang.String</type>
            <description>Images location.</description>
        </attribute>
    </tag>
</facelet-taglib>